generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
 
 
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  password String
  produtos Produto[]
}

model Produto {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  quantidade Int
  userId     String @db.ObjectId
  user       User   @relation(fields: [userId], references: [id])
}
